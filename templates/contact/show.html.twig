{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

	{% if is_granted ('ROLE_ADMIN') %}
		<h2 class="subtitle">Demande
			{{ contact.id }}
			concernant le véhicule
			{{ contact.car.brand }}
			{{ contact.car.model }}</h2>
		<h3 class="subtitle">Envoyé par
			{{ contact.firstname }}
			{{ contact.lastname }}</h3>
		<h3 class="subtitle">Email :
			{{ contact.email }}</h3>
		<p>{{ contact.message }}</p>

		<a href="{{ path('app_contact_index') }}" class="btn btn-warning">Retour aux contacts</a>

		<a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-warning">Modifier le contact</a>

		{{ include('contact/_delete_form.html.twig') }}
	{% else %}
		<h2 class="subtitle">
			Vous n'avez pas les droits pour accéder à cette page</h2>
		<a href="{{ path('home') }}" class="btn btn-warning">Retour à l'accueil</a>
	{% endif %}

{% endblock %}
