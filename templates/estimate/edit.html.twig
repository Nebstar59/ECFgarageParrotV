{% extends 'base.html.twig' %}

{% block title %}Edit Estimate{% endblock %}

{% block body %}

{% if is_granted ('ROLE_ADMIN') %}

    <h2 class="subtitle">Modifier le devis</h2>

    {{ include('estimate/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <a href="{{ path('app_estimate_index') }}" class="btn btn-warning">Retour à la liste des devis</a>

    {{ include('estimate/_delete_form.html.twig') }}

{% else %}
    <h2 class="subtitle">Vous n'avez pas les droits pour modifier un devis</h2>
    <a href="{{ path('app_estimate_index') }}" class="btn btn-warning">Retour à la liste des devis</a>
{% endif %}

{% endblock %}
