{% extends 'base.html.twig' %}

{% block title %}Edit Prestation{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}

    <h2 class="subtitle">Modifier la prestation</h2>

    {{ include('prestation/_form.html.twig', {'button_label': 'Mettre à jour'}) }}


    <a href="{{ path('app_prestation_index') }}" class="btn btn-warning">Retour à la liste des prestations</a>

    {{ include('prestation/_delete_form.html.twig') }}

{% else %}
    <h2 class="subtitle">Vous n'avez pas les droits pour modifier une prestation</h2>
    <a href="{{ path('app_service_index') }}" class="btn btn-warning">Retour à la liste des services</a>
{% endif %}
    
{% endblock %}
