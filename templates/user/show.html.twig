{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{% if is_granted('ROLE_SUPER_ADMIN') %}

    <h2 class="subtitle"> {{ user.firstname }} {{ user.lastname }} </h2>
    <p> Adresse-mail : {{ user.email }} </p>
    <p> Rôle : {{ user.roles }} </p>
    <p> Mot de passe : {{ user.password }} </p>

    <a href="{{ path('app_user_index') }}" class="btn btn-warning">Retour à la liste du personnel</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}

{% else %}
    <h2 class="subtitle"> Vous n'avez pas les droits pour accéder à cette page </h2>
{% endif %}
{% endblock %}
