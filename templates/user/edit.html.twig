{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
{% if is_granted('ROLE_SUPER_ADMIN') %}

    <h2 class="subtitle">Modifier le profil de l'employé </h2>

    {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_user_index') }}" class="btn btn-warning">Retour à la liste du personnel</a>

    {{ include('user/_delete_form.html.twig') }}

{% else %}
    <h2 class="subtitle">Vous n'avez pas les droits nécessaires pour accéder à cette page</h2>
    <a href="{{ path('app_home') }}" class="btn btn-warning">Retour à l'accueil</a>
{% endif %}
{% endblock %}
