{% extends 'base.html.twig' %}

{% block title %}Edit Testimonial{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}
    <h2 class="subtitle">Modifier l'avis </h2>

    {{ include('testimonial/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    <a href="{{ path('app_testimonial_index') }}">Retour à la liste des avis</a>

    {{ include('testimonial/_delete_form.html.twig') }}
{% else %}
    <h2 class="subtitle">Vous n'avez pas les droits pour modifier cet avis</h2>
    <a href="{{ path('home') }}">Retour à l'accueil</a>
{% endif %}
{% endblock %}
